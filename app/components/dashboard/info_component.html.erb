<div class="max-w-7xl mx-auto lg:px-0 md:px-4 px-2 py-6 flex flex-col md:flex-row space-x-4 items-center">
  <div class="md:w-1/2">
    <h1 class="md:text-4xl text-2xl font-semibold leading-tight text-gray-900 leading-normal tracking-wider">
      <%= title %>
    </h1>
    <div class="py-4 text-gray-500 text-sm leading-normal tracking-wider">
      <%= header %>
    </div>
    <div class="mt-8 md:text-left text-center">
      <%= link_to action_title, action_link, class: 'bg-blue-600 px-8 py-4 rounded-full text-sm text-white hover:text-white hover:bg-blue-500 hover:no-underline', data: { turbolinks: false } %>
    </div>
  </div>
  <div class="md:w-1/2 md:flex hidden items-center justify-center">
    <%= image_tag image %>
  </div>
</div>
<div class="max-w-7xl mx-auto">
  <span class="text-red-600 bg-red-100 block pl-2 pr-4 py-4 rounded-xl flex items-center">
    <span class="text-4xl md:px-4 px-2 py-2">❗️</span>
    <span class="text-xs leading-relaxed">
      <%= warning %>
    </span>
  </span>
</div>
