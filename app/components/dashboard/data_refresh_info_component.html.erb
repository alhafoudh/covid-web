<div
  class="flex items-center"
  data-controller="refresh-info"
  data-refresh-info-prefix-value="<%= t(:'last_updated_ago.prefix') %>"
  data-refresh-info-suffix-value="<%= t(:'last_updated_ago.suffix') %>"
  data-refresh-info-last-updated-value="<%= last_updated_at.iso8601 %>"
  data-refresh-info-update-interval-value="<%= update_interval %>"
  data-refresh-info-tick-interval-value="10000"
  data-refresh-info-fresh-class="refresh-info--indicator-fresh"
  data-refresh-info-old-class="refresh-info--indicator-old"
>
  <span class="text-2xl mx-2 refresh-info--indicator-fresh">
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="fill-current"><g transform="translate(-958 -53)"><g transform="translate(14 6)"><circle cx="9" cy="9" r="9" transform="translate(947 50)" opacity="0.14"/><circle cx="12" cy="12" r="12" transform="translate(944 47)" opacity="0.04"/><circle cx="6" cy="6" r="6" transform="translate(950 53)" /></g><g transform="translate(964 59)" fill="none" stroke="#fff" stroke-width="1" opacity="0.3"><circle cx="6" cy="6" r="6" stroke="none"/><circle cx="6" cy="6" r="5.5" fill="none"/></g></g></svg>
  </span>
  <!--  <span class="text-2xl mx-2" data-refresh-info-target="oldIndicator">&ofcir;</span>-->
  <div class="flex flex-col text-sm font-medium md:text-xs">
    <span data-refresh-info-target="output" title="<%= l last_updated_at, format: :long %>"></span>
    <span>
    <%= t(:update_period_info_html, every_minutes: t(:every_minutes, count: update_interval)) %>
    </span>
  </div>
</div>
