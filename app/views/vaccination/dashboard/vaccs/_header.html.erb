<div class="flex lg:flex-row flex-col mb-1 lg:h-8">
  <div class="flex flex-col lg:mb-2 lg:max-w-sm w-full">
    <span class="text-xl font-bold"><%= title %></span>
  </div>
  <div class="flex items-stretch w-full">
    <% vaccination_dates.map do |vaccination_date| %>
      <div class="w-full flex flex-col items-center justify-center text-center text-sm">
        <span><%= l vaccination_date.date, format: '%a' %></span>
        <span><%= l vaccination_date.date, format: '%d %b' %></span>
      </div>
    <% end %>
  </div>
</div>