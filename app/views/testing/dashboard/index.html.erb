<% content_for :menu_info do %>
  <%= render Dashboard::DataRefreshInfoComponent.new(snapshot_class: TestDateSnapshot, update_interval: Rails.application.config.x.testing.update_interval) %>
<% end %>
<%= render Dashboard::PromotionComponent.new %>
<%= render Dashboard::NoticeComponent.new(type: :announcement, message: t(:announcement_html)) %>
<%= render Dashboard::InfoComponent.new(
    title: t(:'testing.title_html'),
    header: t(:'testing.dashboard.header_html'),
    image: 'testing_header_image.png',
    warning: t(:'testing.dashboard.warning_html'),
    action_title: t(:'testing.dashboard.action_title'),
    action_link: "#{root_path}#list",
) %>
<%= turbo_frame_tag(:jump, src: testing_jump_path) %>
<% @regions.map do |region| %>
  <%= turbo_frame_tag(dom_id(region), src: testing_region_path(region)) %>
<% end %>
<%= turbo_frame_tag(:other_region, src: testing_other_region_path) %>