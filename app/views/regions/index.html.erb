<div>
  <% @regions.map do |region| %>
    <div class="mb-8">
      <span class="text-2xl font-bold"><%= region.name %></span>
      <div class="mt-2">
        <% region.counties.map do |county| %>
          <div class="inline-block w-64 mb-2"><%= link_to county.name, region_county_moms_path(region, county) %> (<%= county.moms_count %>)</div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>